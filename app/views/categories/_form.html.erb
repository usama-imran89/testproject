<% form_for(@order, :url => {:controller => "orders", :action => "edit", :method=>"post"}) do |form| %>
  <% if @category.errors.any? %>
    <ul>
    <% @order.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>
  <div>
    <%= form.label :status%><br>
      <%= form.file_field :avatar %>
  </div>
  <div>
    <%= form.submit %>
  </div>

<% end %>
