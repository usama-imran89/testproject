<h1>Category <%=pluralize @visit_count, 'time'%></h1>
<details>
  <summary>
    <ul>
      <%@cart.each do |item|%>
        <li>
          <%= item.title%>
        </li>
      <% end %>
    </ul>
  </summary>
</details>

<ul>
   <%@categories.each do |category|%>

     <%=category.name%>
     <%=link_to "Show", category_path(category)%>
     <% if  current_user.role == "admin"%>
      <%=link_to "Edit this Category", edit_category_path(category)%>
     <% end %>
     <br/>
  <% end %>
</ul>
<% if current_user.role == "admin"%>
  <ul>
    <li>
      <%=link_to "Add New Category",  new_category_path%>
    </li>
  <ul>
<%end%>

