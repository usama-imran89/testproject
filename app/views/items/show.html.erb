<div class="card container my-5 justify-content-between" style="width: 25rem;">
  <h3 class="card-title">Item Detail</h3>
  <div class="card-body">
    <div class="mb-3">
      <h4><%= @item.title %></h4>
      <h4>Description:</h4>
      <p><%=Faker::Lorem.paragraph(sentence_count: 9, supplemental: false, random_sentences_to_add: 4)%></p>
      <h3>Price: <%= @item.price %></h3>
      <%if @item.avatar.attached?%>
        <span class="">
          <%=image_tag @item.avatar, width: "350px"%>
        </span>
      <% end %>
    </div>
  </div>
</div>

