<%=form_with model: @item ,method: :post ,local: true do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description%>
  </div>
   <div>
    <%= form.label :price %><br>
    <%= form.number_field :price%>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
